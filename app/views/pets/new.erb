<h1>Create a new Pet</h1>
<form method="post" action="/pets">
  <label>Pet Name: <input id="pet_name" type="text" name="pet[name]"></label>
  <p>Choose an owner from the list below</p>
  <% owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input>
    <br>
  <% end %>
  <p>Or create a new owner:</p>
  <label>Owner Name: <input id="owner_name" type="text" name="owner[name]"></label>
  <input type="submit" value="Create Pet">
</form>
